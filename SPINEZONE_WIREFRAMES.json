{
  "projectName": "SpineZone Website Restructuring - Wireframes",
  "designDate": "2025-01-09",
  "mobileFirstApproach": true,
  "primaryObjective": "Shorten homepage, improve conversion with appointment-focused CTAs",
  
  "designSystem": {
    "breakpoints": {
      "mobile": "320px-768px",
      "tablet": "768px-1024px", 
      "desktop": "1024px+"
    },
    "touchTargets": {
      "minimum": "44px",
      "recommended": "48px",
      "ctaButtons": "56px"
    },
    "spacing": {
      "mobile": "16px",
      "tablet": "20px",
      "desktop": "24px"
    },
    "colors": {
      "primary": "#2563EB",
      "secondary": "#059669",
      "accent": "#DC2626",
      "neutral": "#374151",
      "background": "#F9FAFB"
    },
    "ctaVariations": [
      "Schedule Your Appointment",
      "Book Appointment Now",
      "Make an Appointment", 
      "Reserve Your Appointment",
      "Schedule Assessment"
    ]
  },

  "pages": {
    "homepage": {
      "title": "Shortened Homepage - Mobile-First Design",
      "objective": "Focus conversion, reduce length by 40%",
      "structure": {
        "header": {
          "height": "64px",
          "sticky": true,
          "components": ["logo", "mobileMenuToggle", "primaryCTA"]
        },
        "heroSection": {
          "heightMobile": "100vh",
          "heightDesktop": "80vh",
          "layout": "singleColumn",
          "components": [
            {
              "element": "heroHeading",
              "content": "Heal Naturally: 90% Success Rate",
              "subheading": "Without Surgery, Injections, or Opioids",
              "emphasis": "Now for All Joint Pain Including Hips, Shoulders, and Knees",
              "styling": {
                "mobile": "text-3xl font-bold leading-tight",
                "desktop": "text-6xl font-bold"
              }
            },
            {
              "element": "statsGrid",
              "layout": "3-column",
              "stats": [
                {"value": "1M+", "label": "Patient Encounters"},
                {"value": "100K+", "label": "Patient Visits"}, 
                {"value": "90%", "label": "Success Rate"}
              ]
            },
            {
              "element": "urgencyNotice",
              "content": "URGENT: Limited New Patient Openings This Month",
              "styling": "gradient-banner with-icon",
              "placement": "below-stats"
            },
            {
              "element": "primaryCTA",
              "text": "Schedule Your Appointment",
              "size": "large",
              "minHeight": "56px",
              "width": "100% mobile, auto desktop",
              "placement": "hero-bottom",
              "scrollTrigger": false
            },
            {
              "element": "trustIndicators",
              "content": "FREE assessment • Most insurance accepted • Same-day appointments",
              "placement": "below-cta"
            }
          ]
        },
        "conditionsTreated": {
          "title": "San Diego Physical Therapy 2025: All Joint Pain Conditions Treated",
          "layout": "enhancedTable",
          "components": [
            {
              "element": "conditionsTable",
              "categories": [
                {
                  "name": "Spine Conditions",
                  "conditions": [
                    {"name": "Herniated Discs", "severity": "Common", "treatmentApproach": "Non-invasive decompression"},
                    {"name": "Sciatica", "severity": "Painful", "treatmentApproach": "Nerve mobilization"},
                    {"name": "Spinal Stenosis", "severity": "Progressive", "treatmentApproach": "Joint mobilization"},
                    {"name": "Chronic Back Pain", "severity": "Persistent", "treatmentApproach": "Comprehensive rehabilitation"}
                  ]
                },
                {
                  "name": "Joint Conditions", 
                  "conditions": [
                    {"name": "Hip Arthritis", "severity": "Degenerative", "treatmentApproach": "Movement restoration"},
                    {"name": "Shoulder Impingement", "severity": "Limiting", "treatmentApproach": "Manual therapy"},
                    {"name": "Knee Pain", "severity": "Variable", "treatmentApproach": "Functional training"}
                  ]
                }
              ],
              "interactivity": {
                "mobile": "accordion-style",
                "desktop": "hover-effects"
              }
            },
            {
              "element": "scrollTriggeredCTA",
              "triggerPoint": "50% scroll",
              "text": "Find Treatment for My Condition",
              "placement": "sticky-bottom mobile",
              "behavior": "fade-in-up"
            }
          ]
        },
        "treatmentOptions": {
          "title": "Comprehensive Treatment Options",
          "layout": "cardGrid",
          "objective": "Replace full journey with overview cards",
          "components": [
            {
              "element": "treatmentCards",
              "layout": {
                "mobile": "vertical-scroll",
                "tablet": "2-column-grid",
                "desktop": "3-column-grid"
              },
              "cards": [
                {
                  "title": "Manual Therapy",
                  "icon": "Heart",
                  "keyBenefits": ["Immediate pain relief", "Improved mobility", "Enhanced circulation"],
                  "ctaText": "Learn More About Manual Therapy",
                  "ctaAction": "navigate:/services#manual-therapy"
                },
                {
                  "title": "Advanced Therapies",
                  "icon": "Zap",
                  "keyBenefits": ["Accelerated healing", "Reduced inflammation", "Nerve regeneration"],
                  "ctaText": "Explore Advanced Treatments", 
                  "ctaAction": "navigate:/services#advanced"
                },
                {
                  "title": "Exercise Therapy",
                  "icon": "Activity",
                  "keyBenefits": ["Long-term stability", "Injury prevention", "Functional improvement"],
                  "ctaText": "Start Exercise Program",
                  "ctaAction": "navigate:/services#exercise"
                }
              ],
              "cardInteraction": {
                "hover": "lift-shadow",
                "mobile": "tap-feedback"
              }
            },
            {
              "element": "treatmentCTA",
              "text": "Not Sure Which Treatment is Right?",
              "subtext": "Take our assessment to get personalized recommendations",
              "ctaText": "Take Assessment",
              "ctaAction": "navigate:/assessment",
              "placement": "cards-bottom"
            }
          ]
        },
        "compactLocalSEO": {
          "title": "San Diego Locations",
          "objective": "Compact version, full details moved to /locations",
          "components": [
            {
              "element": "neighborhoodLinks",
              "layout": "horizontal-scroll mobile, grid desktop",
              "neighborhoods": ["La Jolla", "Hillcrest", "Pacific Beach", "Mission Valley", "Downtown"],
              "linkAction": "navigate:/locations#neighborhood"
            },
            {
              "element": "networkCTA",
              "text": "View All Locations & Network",
              "ctaAction": "navigate:/locations",
              "styling": "secondary-button"
            }
          ]
        },
        "faqSection": {
          "title": "Physical Therapy FAQ - San Diego 2025",
          "layout": "accordion",
          "maxVisible": 6,
          "foldLine": "above-footer"
        },
        "finalCTA": {
          "title": "Ready to Start Your Recovery?",
          "text": "Make Your Appointment Today",
          "subtext": "Join thousands of San Diego patients who chose natural healing",
          "ctaSize": "large",
          "placement": "full-width-section"
        }
      },
      "removedSections": [
        "Full Treatment Journey (moved to /treatment-journey)",
        "Don't See Your Condition Listed (moved to /services)",
        "Network Trust Indicators (moved to /locations)",
        "Detailed Local SEO content"
      ],
      "mobileOptimizations": {
        "stickyNavigation": true,
        "scrollTriggeredCTAs": true,
        "touchFriendlySpacing": true,
        "minimumTouchTargets": "44px",
        "stackedLayouts": true
      }
    },

    "treatmentJourneyPage": {
      "route": "/treatment-journey",
      "title": "Your Treatment Journey - What to Expect",
      "objective": "Dedicated page for treatment process education",
      "structure": {
        "heroSection": {
          "title": "Your Path to Recovery",
          "subtitle": "Understanding the 3-Phase Treatment Process",
          "ctaText": "Start My Journey",
          "ctaAction": "scroll-to-booking"
        },
        "phaseTimeline": {
          "layout": "vertical-timeline mobile, horizontal desktop",
          "phases": [
            {
              "phase": "Phase 1",
              "title": "Pain Relief & Protection",
              "duration": "1-2 weeks",
              "goals": ["Reduce acute pain", "Protect injured tissues", "Restore basic function"],
              "treatments": ["Manual therapy", "Pain management", "Gentle mobilization"],
              "expectedOutcomes": "60-80% pain reduction",
              "visualIndicator": "progress-bar-20"
            },
            {
              "phase": "Phase 2", 
              "title": "Mobility & Strength",
              "duration": "2-4 weeks",
              "goals": ["Improve range of motion", "Build foundational strength", "Address movement patterns"],
              "treatments": ["Progressive exercises", "Manual therapy", "Movement training"],
              "expectedOutcomes": "Functional improvement, return to daily activities",
              "visualIndicator": "progress-bar-60"
            },
            {
              "phase": "Phase 3",
              "title": "Function & Performance", 
              "duration": "2-6 weeks",
              "goals": ["Return to activities", "Optimize performance", "Prevent recurrence"],
              "treatments": ["Advanced exercises", "Functional training", "Sport-specific prep"],
              "expectedOutcomes": "Full activity resumption, injury prevention",
              "visualIndicator": "progress-bar-100"
            }
          ]
        },
        "expectationsSection": {
          "title": "What to Expect During Treatment",
          "layout": "info-cards",
          "cards": [
            {
              "title": "Average Treatment Length",
              "content": "4-8 weeks depending on condition severity",
              "icon": "Calendar"
            },
            {
              "title": "Session Frequency",
              "content": "2-3 times per week initially, reducing as you improve", 
              "icon": "Clock"
            },
            {
              "title": "Success Rate",
              "content": "90% of patients achieve their treatment goals",
              "icon": "TrendingUp"
            }
          ]
        },
        "progressTracking": {
          "title": "How We Track Your Progress",
          "components": [
            "Initial assessment and baseline measurements",
            "Weekly progress evaluations",
            "Functional outcome assessments", 
            "Patient-reported outcome measures"
          ]
        },
        "ctaSections": [
          {
            "placement": "after-phases",
            "text": "Ready to Begin Phase 1?",
            "ctaText": "Schedule Your Assessment"
          },
          {
            "placement": "after-expectations", 
            "text": "Have Questions About Your Journey?",
            "ctaText": "Speak with a Specialist"
          },
          {
            "placement": "page-bottom",
            "text": "Start Your Recovery Journey Today",
            "ctaText": "Book Your First Appointment"
          }
        ]
      }
    },

    "enhancedLocationsPage": {
      "route": "/locations",
      "title": "San Diego Physical Therapy Locations",
      "objective": "Network trust indicators, interactive map, individual clinic CTAs",
      "structure": {
        "heroSection": {
          "title": "San Diego's Most Trusted Physical Therapy Network", 
          "subtitle": "8 locations serving San Diego & Orange County",
          "networkStats": {
            "layout": "4-column mobile-stack",
            "stats": [
              {"value": "8", "label": "Clinic Locations"},
              {"value": "1M+", "label": "Patient Encounters"},
              {"value": "90%", "label": "Success Rate"},
              {"value": "24hr", "label": "Response Time"}
            ]
          }
        },
        "trustIndicators": {
          "title": "Why Patients Choose Our Network",
          "layout": "icon-with-text-grid",
          "indicators": [
            {
              "icon": "Shield",
              "title": "All Major Insurance Accepted",
              "description": "Direct billing and pre-authorization handling"
            },
            {
              "icon": "Clock",
              "title": "24-Hour Appointment Confirmation", 
              "description": "Quick scheduling across all locations"
            },
            {
              "icon": "Users",
              "title": "Consistent Quality Standards",
              "description": "Same proven protocols at every clinic"
            },
            {
              "icon": "MapPin",
              "title": "Convenient Locations",
              "description": "Easy access throughout San Diego County"
            }
          ]
        },
        "interactiveMap": {
          "mapProvider": "Google Maps",
          "features": [
            "Clinic location markers",
            "Real-time hours display", 
            "Driving directions",
            "Parking information"
          ],
          "mapHeight": {
            "mobile": "300px",
            "desktop": "500px"
          }
        },
        "locationCards": {
          "layout": "responsive-grid",
          "cardStructure": {
            "clinicName": "string",
            "address": "string", 
            "phone": "string",
            "hours": "object",
            "specialties": "array",
            "availableToday": "boolean",
            "ctaText": "Schedule at This Location",
            "ctaAction": "booking-modal-with-location-preset"
          },
          "locations": [
            {
              "name": "SpineZone La Jolla",
              "address": "8950 Villa La Jolla Dr, La Jolla, CA 92037",
              "specialties": ["Spine Care", "Sports Rehab"],
