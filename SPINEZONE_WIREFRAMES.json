            },
            {
              "name": "SpineZone Hillcrest", 
              "address": "1234 University Ave, San Diego, CA 92103",
              "specialties": ["Manual Therapy", "Joint Pain"],
              "features": ["Public Transit", "Evening Hours"]
            }
          ]
        },
        "serviceAreaMap": {
          "title": "Complete San Diego Coverage",
          "neighborhoods": {
            "layout": "interactive-area-map",
            "areas": [
              "La Jolla", "Pacific Beach", "Mission Beach", "Hillcrest", 
              "Mission Valley", "Downtown", "Point Loma", "Clairemont"
            ]
          }
        }
      }
    },

    "enhancedServicesPage": {
      "route": "/services", 
      "title": "Physical Therapy Services - San Diego 2025",
      "objective": "Comprehensive service details + migrated content",
      "structure": {
        "heroSection": {
          "title": "Comprehensive Physical Therapy Services",
          "subtitle": "Advanced treatments for all musculoskeletal conditions"
        },
        "serviceCategories": {
          "layout": "expandable-cards",
          "categories": [
            {
              "name": "Spine & Back Pain Treatment",
              "services": ["Herniated Disc Therapy", "Sciatica Treatment", "Spinal Stenosis Care"],
              "ctaText": "Book Spine Assessment"
            },
            {
              "name": "Joint Pain Treatment",
              "services": ["Hip Pain Relief", "Shoulder Rehabilitation", "Knee Pain Treatment"],
              "ctaText": "Schedule Joint Evaluation"
            },
            {
              "name": "Sports Injury Rehabilitation", 
              "services": ["Athletic Recovery", "Performance Optimization", "Injury Prevention"],
              "ctaText": "Book Sports Assessment"
            }
          ]
        },
        "conditionAssessment": {
          "title": "Don't See Your Condition Listed?",
          "content": "Comprehensive evaluation for any musculoskeletal condition",
          "features": [
            "Comprehensive diagnostic evaluation",
            "Personalized treatment protocols",
            "Evidence-based approaches", 
            "Ongoing progress monitoring"
          ],
          "ctaText": "Schedule Comprehensive Assessment",
          "styling": "highlighted-section"
        },
        "treatmentSelection": {
          "title": "Not Sure Which Treatment is Right for You?",
